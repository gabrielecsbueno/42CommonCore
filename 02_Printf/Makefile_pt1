# Nome do executavel
NAME = teste

# Compilador e flags
CC = cc
CFLAGS = -Wall -Wextra -Werror

# Arquivos fontes para compilar
SRCS = main.c ft_printf.c ft_print.c ft_itoa.c

# Arquivos de cabecalho
HEADER = includes.h

# Arquivos objetos
OBJ = $(SRCS:.c=.o)

# Regra principal
all: $(NAME)

# Regra principal
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)
	rm -f $(OBJ)
	./teste
	rm teste

# remove os ojbetos e a biblioteca
fclean:
	rm -f $(NAME)

# recompila tudo de novo
re: fclean all

.PHONY: all clean fclean re
