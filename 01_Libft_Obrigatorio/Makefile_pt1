# Nome do executavel
NAME = teste

# Compilador e flags
CC = gcc
CFLAGS = -Wall -Wextra -Werror -lbsd

# Arquivos fontes para compilar
SRCS = main.c ft_isalpha.c ft_isalnum.c ft_isascii.c ft_isdigit.c ft_isprint.c ft_strlen.c ft_strlcpy.c ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c ft_strrchr.c ft_strncmp.c ft_strnstr.c ft_atoi.c ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c ft_memchr.c ft_memcmp.c ft_calloc.c ft_strdup.c ft_substr.c ft_strjoin.c ft_strtrim.c ft_split.c ft_itoa.c ft_putchar_fd.c ft_putstr_fd.c ft_putendl_fd.c ft_putnbr_fd.c ft_strmapi.c ft_striteri.c

# Arquivos de cabecalho
HEADER = libft.h

# Arquivos objetos
OBJ = $(SRCS:.c=.o)

# Regra principal
all: $(NAME)

# Regra principal - cria biblioteca
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)
	rm -f $(OBJ)
	./teste

# remove os ojbetos e a biblioteca
fclean:
	rm -f $(NAME)

# recompila tudo de novo
re: fclean all

.PHONY: all clean fclean re
